{% extends 'admin/admin_base.html.twig' %}

{% form_theme form with ['_form/address_form.html.twig', '_form/phone_form.html.twig'] %}
{% block title %}{{ title }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_user_management_admins') }}">
            {{ 'ui.administrators'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">{{ title }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-8">
            {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
            {{ form_errors(form) }}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title align-items-center d-flex mb-0">
                        <i class="ri-user-2-line me-1"></i>
                        {{ 'ui.personal_info'|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">{{ form_row(form.firstName) }}</div>
                        <div class="col">{{ form_row(form.lastName) }}</div>
                    </div>
                    <div class="row">
                        <div class="col">{{ form_row(form.email) }}</div>
{#                        <div class="col">{{ form_row(form.username) }}</div>#}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.phones) }}
                    </div>
                    {{ form_row(form.address) }}
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            {# Profile Img #}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">{{ 'ui.profile_pic'|trans }}</h5>
                </div>
                <div class="card-body">
                    {{ form_row(form.profileFile) }}
                </div>
            </div>

            {# Privacy Info #}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title align-items-center d-flex mb-0">
                        <i class="ri-lock-2-line me-1"></i>
                        {{ 'ui.privacy'|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_row(form.enabled) }}
                    {{ form_row(form.roles) }}
                    {{ form_row(form.authCode) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button class="btn btn-primary btn-label">
                    <i class="las la-save label-icon"></i> {{ "ui.button.save"|trans }}
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}