        </a>
        <!-- Light Logo-->
        <a href="{{ path('homepage') }}" class="logo logo-light">
            <span class="logo-sm">
                <img src="{{ vich_uploader_asset(settings, 'logoFile')|imagine_filter('logo_small') }}" class="logo">
